%][%- PROCESS '_dreamwidth.tt' -%]

[%- BLOCK block.need_res -%]
    [%- dw_scheme.need_res(
            'stc/reset.css',
            'stc/jquery/jquery.ui.theme.smoothness.css',
            'stc/lj_base-app.css',
            'stc/base-colors-light.css' );
        dw_scheme.need_res({ group => 'default' },
            'stc/tropo/tropo-base.css',
            'stc/tropo/tropo-' _ tropo_color _ '.css',
            'js/nav.js' );
        dw_scheme.need_res({ group => 'jquery' },
            'stc/tropo/tropo-base.css',
            'stc/tropo/tropo-' _ tropo_color _ '.css',
            'js/nav-jquery.js' );
        dw_scheme.need_res({ group => 'foundation' },
                'stc/css/foundation.css',
                'stc/css/schemes/tropo/tropo-base.css',
                'stc/css/schemes/tropo/tropo-' _ tropo_color _ '.css',
                'js/jquery/jquery-1.8.3.js',
                'js/foundation/vendor/custom.modernizr.js',
                'js/foundation/foundation/foundation.js',
                'js/foundation/foundation/foundation.topbar.js' );
    -%]
[%- END -%]

[%- BLOCK block.page -%]
[%- IF logo_path -%]
[%- ELSIF tropo_color != 'red' -%]
    [%- logo_path = '/tropo-red/dw_logo_' _ tropo_color _ '.png' -%]
[%- ELSE -%]
    [%- logo_path = '/tropo-red/dw_logo.png' -%]
[%- END -%]

[%- IF resource_group == "foundation" -%]
<!DOCTYPE html>
<html lang="en">
    [% PROCESS block.head %]
    <body [% sections.bodyopts %]>
        <div id="canvas">
            <div id="page">
                [%# Not using the HTML 5 <header> element for now
                because of incompatibilities with JAWS and
                Firefox %]
                <div id="masthead">
                    <div class="row">

                    <div class="columns large-4 small-12" role="banner">
                        <span id="logo">
                            [% PROCESS block.logo %]
                        </span>
                    </div>

                    <div class="columns large-8 small-12">
                    <div id="account-links" role="navigation">
                        [% PROCESS block.accountlinks %]
                    </div>
                    </div>

                    </div>
                </div>

                <div class="row">
                    <nav role="navigation" class="top-bar">
                        <ul class="title-area">

                        <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
                        </ul>
                        <section class="top-bar-section">
                        [% PROCESS block.menunav %]
                        <ul class="right" role="search">
                        <li class="has-form">
                        [% dw_scheme.search_render %]
                        </li>
                        </ul>
                        </section>
                    </nav>
                </div>

                <div id="content" role="main" [% sections.contentopts %]>
                <h1>[% sections.title %]</h1>
                [% content %]
                </div>

                <footer role="contentinfo" class="row">
                    [% PROCESS block.footer %]
                </footer>
            </div>
        </div>
        [% dw_scheme.final_body_html %]
      <script>
        $(document).foundation();
      </script>
    </body>
</html>

[%- ELSE -%]
<!DOCTYPE html>
<html lang="en">
    [% PROCESS block.head %]
    <body [% sections.bodyopts %]>
        <div id="canvas">
            <div id="page">
                [%# Not using the HTML 5 <header> element for now
                because of incompatibilities with JAWS and
                Firefox %]
                <div id="masthead" role="banner">
                    <span id="logo">
                        [% PROCESS block.logo %]
                    </span>
                </div>

                <div id="content" role="main" [% sections.contentopts %]>
                <h1>[% sections.title %]</h1>
                [% content %]
                </div>

                <div id="account-links" role="navigation">
                    [% PROCESS block.accountlinks %]
                </div>
                <nav role="navigation">
                    [% PROCESS block.menunav %]
                    <div role="search">
                    [% dw_scheme.search_render %]
                    </div>
                </nav>
                <footer role="contentinfo">
                    [% PROCESS block.footer %]
                </footer>
            </div>
        </div>
        [% dw_scheme.final_body_html %]
     <div id="shim-alpha"> </div>
    </body>
</html>
[%- END -%]

[%- END -%]
